    <!-- Regular Application Theme. -->
    <style name="RegularTheme_AR_Insight_Lens" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/workingRegularColor</item>
        <item name="colorPrimaryVariant">@color/workingRegularColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/completedRegularColor</item>
        <item name="colorSecondaryVariant">@color/completedRegularColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="startColor">@color/workingRegularColor</item>
        <item name="endColor">@color/completedRegularColor</item>
    </style>

