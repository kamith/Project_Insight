<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="?attr/startColor"
                android:endColor="?attr/endColor"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="?attr/endColor"
                android:endColor="?attr/startColor"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="?attr/startColor"
                android:endColor="?attr/endColor"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/grayedOut"
                android:startColor="@color/grayedOut"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/grayedOut" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>